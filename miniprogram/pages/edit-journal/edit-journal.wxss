/* miniprogram/pages/edit-journal/edit-journal.wxss */

/* 卡片列表 */

.card {
  margin: 10rpx auto !important;
}



.avter-content {
  margin-top: 10rpx;
  color: #333;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
}

.avter-share-container{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.like-container{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  align-items: center
}

.number{
  color: #666;
  font-size: 24rpx;
  margin-left: 12rpx;
}

/* 发布按钮 */
.edit-journal{
  position: fixed;
  margin: 0;
  padding: 0;
  bottom: 230px;
  font-size: 30px;
  right: 20px;
  box-shadow:0px 0px 8px 4px rgb(180, 177, 177);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  z-index: 99999;
}
/* 表单 */
.l-form-btn-class{
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.pop-form-outer{
  width: 280px;
  padding: 10px;
  
  background-color: #ffffff;
  box-shadow:0px 0px 8px 4px rgb(180, 177, 177);
  border-radius: 10px;
}
.pop-title{
width: 100%;
height: 40px;
text-align: center;
}