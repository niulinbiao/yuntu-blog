/* pages/workshop/flag/flag.wxss */
canvas {
  position: fixed;
  top: 0;
  left: 400px;
  width: 1125px;
  height: 1125px;
}

.preview {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  position: absolute;
  z-index: 2;
}

.preview image {
  width: 200px;
  height: 200px;
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%,0);
  z-index: 3;
  border: 1px dashed #fff;
}

.me-wh{
  width: 180rpx !important;
  height: 180rpx !important;
  z-index: 3;
}

.me-bot{
  position: absolute;
  bottom: 20rpx;
}


